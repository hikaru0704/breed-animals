
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@animal) do |f| %>

      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :年齢 %>
      <%= f.text_field :age %>

      <%= f.label :性別 %>
      <%= f.text_field :sex %>
      
      <%= f.label :種類 %>
      <%= f.text_field :breed %>

      <%= f.label :感染症 %>
      <%= f.text_field :chronic_illness %>
      
      動物種
      <%= f.collection_select:animal_type_id,AnimalType.all,:id,:name %>
      
      <%# options = ["犬", "猫", "爬虫類", "鳥類", "小動物", "その他"] %>
      <%#= f.select :animal_type_id, options %>

      <%#= f.label :通院 %>
      <%#= f.text_field :attend_the_hospital %>

      <%#= f.label :ワクチン %>
      <%#= f.text_field :vaccine %>

      <%#= f.label :血液検査 %>
      <%#= f.text_field :blood_test %>

      <%= f.submit "Create animal", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

